<UserControl x:Class="SimulationUtility.Controls.ChunkControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimulationUtility.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{local:ChunkControlViewModel}">
    <!--<UserControl.DataContext>
        <local:ChunkControlViewModel />
    </UserControl.DataContext>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition />
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal">
                <Label Content="Chunk" />
                <Button Content="Add" Command="{Binding AddEventCommand}" />
                <Button Content="Remove chunk" Command="{Binding RemoveMeCommand}" />
        </StackPanel>
            
            <ListView Grid.Row="1" ItemsSource="{Binding Events}" />
        </Grid>
</UserControl>
