<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BachelorThesis.App">
    <Application.Resources>

        <!-- Application resource dictionary -->
        <ResourceDictionary>
            <x:Double x:Key="TimeLineHeight">50</x:Double>
            <GridLength x:Key="TimeLineRowHeight">50</GridLength>

            <Color x:Key="Primary">#006DAB</Color>
            <Color x:Key="PrimaryDark">#3F87DE</Color>
            <Color x:Key="Accent">#3FDBDE</Color>

            <Color x:Key="TransactionColor1">#2C8CAB</Color>
            <Color x:Key="TransactionColor2">#006DAB</Color>
            <Color x:Key="TransactionColor3">#294CA6</Color>
            <Color x:Key="TransactionColor4">#163584</Color>
            <Color x:Key="TransactionColor5">#0F2347</Color>

            <Color x:Key="CanvasBackground">White</Color>
            <Color x:Key="TimeLineColor">#363a3f</Color>
            <Color x:Key="TimeLineColorAccent">LightSlateGray</Color>
            <Color x:Key="ProgressColor">LightGreen</Color>
            <Color x:Key="ProgressStopColor">Salmon</Color>
            <Color x:Key="ProgressWarningColor">#fff960</Color>
          
            <Color x:Key="StrokeColor">Black</Color>
        </ResourceDictionary>

    </Application.Resources>
</Application>